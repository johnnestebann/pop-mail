<?xml version="1.0" encoding="utf-8"?>
<phpunit bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="Pop Mail Component PHPUnit Test">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <exclude>
                <directory suffix=".php">src/Transport/Smtp</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="/tmp/pop-mail-cc" charset="UTF-8"
             yui="true" highlight="false" showUncoveredFiles="true"
             lowUpperBound="35" highLowerBound="70" />
    </logging>
</phpunit>
